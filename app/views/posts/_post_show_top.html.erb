<div class="card-body">
  <div>
    <%= link_to "情報修正", edit_post_path(@post) %>
  </div>
  <div class="card-text">
    <h2><strong><%= @post.title %></strong></h2>
  </div>
  <div class="card-text">
    <%= link_to post_reviews_path(@post) do %>
      <div class="Editlink">
        口コミ<%= @post.reviews.size%>件 / <%=@post.reviews.average(:star).to_f.round(1)%>
      </div>
    <%end%>
  
    <!--合計の星レビューを表示-->
    <%= render 'posts/total_review_average'%>
  
  </div>
  <div class="card-text text-right">
    <!--いいね機能の表示-->
    <div class="mb-2">
      <%= render 'posts/post' %>
    </div>
    <!--口コミボタンの表示-->
    <div>
      <%if @post.reviews.where(user_id:current_user).exists?%>
        <button class="btn btn-dark" disabled>口コミ投稿済み</button>
      <%else%>
        <%= link_to   new_post_review_path(@post),class: 'btn btn-info' do%>
          <i class="fa fa-edit"></i> 口コミを書く
        <%end%>
      <%end%>   
    </div>
  </div>
</div>

<div class="ml-4">
  <h5>
    <%= link_to "お店情報" ,post_path(@post),class: "Editlink"%>&nbsp;
    <%= link_to "口コミ" ,post_reviews_path(@post),class: "Editlink"%>&nbsp;
    <%= link_to "雀活" ,post_comments_path(@post),class: "Editlink"%>
  </h5>
  <hr color="#000000">
</div>